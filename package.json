{
  "name": "made-in",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "dev": "run-s clean && vite",
    "build": "run-s clean && tsc && vite build --emptyOutDir && run-s firefox-mv2-build && run-s zip",
    "zip": "bestzip build.zip dist",
    "firefox-mv2-build": "node tools/unstable_mv3ToMv2Build.js",
    "clean": "run-p clean:*",
    "clean:dist": "rimraf dist",
    "clean:dist-firefox-v2": "rimraf dist-firefox-v2",
    "format": "run-p format:*",
    "format:eslint": "run-s \" lint:eslint --fix \"",
    "format:prettier": "run-s \" lint:prettier --write \"",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint . --ext .js,.ts,.tsx --max-warnings 0 --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.(md|json|yml)\" --ignore-path .gitignore --check",
    "lint:type": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@tabler/icons-svelte": "^2.24.0",
    "@twind/core": "^1.1.3",
    "@twind/preset-autoprefix": "^1.0.7",
    "@twind/preset-tailwind": "^1.1.4",
    "cheerio": "1.0.0-rc.12",
    "clsx": "^1.2.1",
    "country-emoji": "^1.5.6",
    "driver.js": "^1.1.0",
    "p-map": "^6.0.0",
    "svelte-asyncable": "^2.1.1",
    "url-polyfill": "^1.1.12",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.17",
    "@sveltejs/vite-plugin-svelte": "^2.2.2",
    "@tsconfig/svelte": "^4.0.1",
    "@types/fs-extra": "^11.0.1",
    "@types/lodash-es": "^4.17.7",
    "@types/webextension-polyfill": "^0.10.0",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "autoprefixer": "^10.4.8",
    "bestzip": "^2.2.1",
    "construct-style-sheets-polyfill": "^3.1.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "fs-extra": "^11.1.1",
    "identity-obj-proxy": "^3.0.0",
    "lodash-es": "^4.17.21",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^6.0.5",
    "postcss": "^8.4.24",
    "prettier": "^3.0.1",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.8.0",
    "svelte": "^4.0.0",
    "svelte-check": "^3.4.3",
    "tailwindcss": "^3.3.2",
    "tslib": "^2.5.3",
    "typescript": "4.8.4",
    "vite": "^4.4.3",
    "vite-tsconfig-paths": "^4.2.0"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  }
}
